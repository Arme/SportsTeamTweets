@model SportsTeamTweets.Models.SubMenuNavModel
@{
    int idx = 0;
    int subMenuLen = Model.Links.Count;
    var firstColLinks = Model.Links;
}
@foreach (var link in firstColLinks)
{
    if ((idx % 5 == 0))//&& (idx != 0))
    {
        <li class="divider divider-no-upper"></li>
    }
    var logoImg = "/Content/Images/NHL/" + link.Key + ".png";
    var logoClass = "logo-nhl-" + link.Key.ToLower();
    var linkref = "/NHL/" + link.Key;
    var linkrefplayers = linkref + "/Players";
    var linkrefmedia = linkref + "/Media";
    <li class="dropdown-submenu">
        <a href="@linkref"><img src="@logoImg" alt="@link.Key" />      @link.Value</a>
        <ul class="dropdown-menu">
            <li>
                <a href="@linkrefplayers">Filter by Players</a>
            </li>
            <li>
                <a href="@linkrefmedia">Filter by Media</a>
            </li>
        </ul>
    </li>
    idx++;
}

